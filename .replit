modules = ["nodejs-20", "bash"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-time_based:1.0.0", "perplexity_v0:1.0.0", "javascript_openai:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq", "glib", "gtk3", "xvfb-run", "chromium"]

[deployment]
build = ["bash", "scripts/build.sh"]
run = ["sh", "-c", "cd .mastra/output && NODE_ENV=production node index.mjs"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8289

[[ports]]
localPort = 44855
externalPort = 3001

[[ports]]
localPort = 50052

[[ports]]
localPort = 50053

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start inngest server"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mastra dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "automations"

[[workflows.workflow]]
name = "Start inngest server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./scripts/inngest.sh"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "automations"
